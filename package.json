{
  "name": "rod-licencing",
  "version": "0.0.1",
  "description": "rod licencing digital services",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "jest",
    "format": "prettier-standard",
    "postinstall": "lerna bootstrap"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@ssh.github.com:443/DEFRA/rod-licencing"
  },
  "keywords": [
    "rod",
    "fishing",
    "licence"
  ],
  "author": "DEFRA",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@defra-fish/dynamics-lib": "file:packages/dynamics-lib",
    "@defra-fish/sales-api-service": "file:packages/sales-api-service",
    "@defra-fish/sqs-receiver-service": "file:packages/sqs-receiver-service",
    "@defra-fish/gafl-webapp-service": "file:packages/gafl-webapp-service"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-json-strings": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@hapi/catbox-memory": "^5.0.0",
    "@types/hapi__hapi": "^19.0.2",
    "@types/jest": "^25.1.3",
    "adal-node": "^0.2.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "del": "^5.1.0",
    "dynamics-web-api": "^1.6.2",
    "gulp": "^4.0.2",
    "gulp-merge": "^0.1.1",
    "gulp-minify": "^3.1.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "prettier-standard": "^16.1.0",
    "standard": "^14.3.1"
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "printWidth": 140
  },
  "standard": {
    "env": {
      "node": true,
      "jest": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && prettier-standard --lint --staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "projects": [
      "<rootDir>/packages/*"
    ],
    "moduleDirectories": [],
    "transform": {
      "\\.js$": [
        "babel-jest",
        {
          "rootMode": "upward"
        }
      ]
    },
    "testEnvironment": "node"
  }
}
