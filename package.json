{
  "name": "rod-licensing",
  "version": "0.0.1",
  "description": "rod licensing digital services",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "rod",
    "fishing",
    "licence"
  ],
  "author": "DEFRA",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "git://github.com/DEFRA/rod-licensing.git"
  },
  "scripts": {
    "postinstall": "npm run lerna:bootstrap",
    "test": "jest",
    "test:only-changed": "jest --onlyChanged",
    "format": "prettier-standard",
    "lerna:clean": "lerna clean --yes",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:prerelease": "lerna version prerelease --yes --preid beta",
    "lerna:publish": "lerna publish from-git --yes --dist-tag beta",
    "docker:build-dev": "TAG=dev PROJECT_DOCKERFILE=Dockerfile.dev docker-compose -f docker/services.build.yml build",
    "docker:services-dev": "TAG=dev docker stack deploy -c docker/services.dev.yml rls",
    "docker:infrastructure": "docker stack deploy -c docker/infrastructure.yml rli",
    "docker:build": "PROJECT_DOCKERFILE=Dockerfile docker-compose -f docker/services.build.yml build",
    "docker:services": "docker stack deploy -c docker/services.yml rls"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-json-strings": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@types/hapi__hapi": "^19.0.3",
    "@types/jest": "^25.2.1",
    "adal-node": "^0.2.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.0.1",
    "dynamics-web-api": "^1.6.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-each": "^26.0.1",
    "lerna": "^3.22.0",
    "lerna-update-wizard": "^0.17.8",
    "lint-staged": "^10.2.2",
    "prettier-standard": "^16.3.0",
    "standard": "^14.3.4"
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "printWidth": 140
  },
  "standard": {
    "env": {
      "node": true,
      "jest": true
    }
  },
  "husky": {
    "hooks": {
      "post-checkout": "chmod 0600 docker/resources/infrastructure/sftp/ssh_host_* && git update-index --assume-unchanged docker/env/*.secrets.env",
      "pre-commit": "npm run test:only-changed && lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "prettier-standard --lint"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "projects": [
      "<rootDir>/packages/*"
    ],
    "transform": {
      "\\.js$": [
        "babel-jest",
        {
          "rootMode": "upward"
        }
      ]
    },
    "testEnvironment": "node",
    "silent": true
  }
}
