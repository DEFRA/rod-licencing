{
  "packages": [
    "packages/*"
  ],
  "version": "1.3.0-rc.1",
  "npmClient": "npm",
  "command": {
    "bootstrap": {},
    "version": {
      "allowBranch": [
        "master",
        "develop"
      ],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "message": "chore(release): publish %s",
      "allowBranch": [
        "master",
        "develop"
      ],
      "ignoreChanges": [
        ".*",
        "*.md",
        "docker/*",
        "sonar-project.properties"
      ]
    }
  }
}
