{% extends "standard-form.njk" %}
{% from "radios/macro.njk" import govukRadios %}

{% set title = 'Do you receive any of the following benefits?' %}

{%
    set errorMap = {
        'benefit-check': {
            'any.required': { ref: '#benefit-check', text: 'You have not told us if you claim Disability Living Allowance or Personal Independence Payment?' }
        }
    }
%}

{% block pageContent %}

    <ul class="govuk-list govuk-list--bullet">
      <li>Personal Independence Payment (PIP)</li>
      <li>Disability Living Allowance (DLA)</li>
    </ul>

    <p class="govuk-body-m">We use this information to find out if you are eligible for a disabled concession</p>

    {{ govukRadios({
           idPrefix: "benefit-check",
           name: "benefit-check",
           items: [
               {
                   text: "Yes",
                   value: "yes",
                   checked: payload['benefit-check'] === 'yes'
               },
               {
                   text: "No",
                   value: "no",
                   checked: payload['benefit-check'] === 'no'
               }
           ],
           errorMessage: { text: 'Tell us if you claim Disability Living Allowance or Personal Independence Payment' } if error
       })
     }}
{% endblock %}
