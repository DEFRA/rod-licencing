{% extends "standard-form.njk" %}
{% from "input/macro.njk" import govukInput %}
{% set title = 'What is your National Insurance number?' %}

{%
    set errorMap = {
        'blue-badge-number': {
            'string.empty': { ref: '#blue-badge-number', text: 'You have not told us your blue badge number' },
            'string.max': { ref: '#ni-number', text: 'You national insurance number is longer than 40 characters' }
        }
    }
%}

{% block pageContent %}
    <p class="govuk-body-m">We use this information to find your Blue Badge details, so that you can get a disabled concession.</p>

    {{ govukInput({
      label: {
        text: "Blue badge number"
      },
      id: "blue-badge-number",
      name: "blue-badge-number",
      hint: { text: "This will be on your badge" },
      value: payload['blue-badge-number'],
      classes: "govuk-input--width-20",
      attributes: { maxlength: 100 },
      errorMessage: { text: 'Your blue badge number' } if error
    }) }}

{% endblock %}
