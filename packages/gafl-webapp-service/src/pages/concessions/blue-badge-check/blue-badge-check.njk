{% extends "standard-form.njk" %}
{% from "radios/macro.njk" import govukRadios %}

{% set title = 'Do you have a Blue Badge?' %}

{%
    set errorMap = {
        'blue-badge-check': {
            'any.required': { ref: '#benefit-check', text: 'You have not told us if you hold a blue badge?' }
        }
    }
%}

{% block pageContent %}

    <p class="govuk-body-m">We use this information to find out if you are eligible for a disabled concession</p>

    {{ govukRadios({
           idPrefix: "blue-badge-check",
           name: "blue-badge-check",
           items: [
               {
                   text: "Yes",
                   value: "yes",
                   checked: payload['blue-badge-check'] === 'yes'
               },
               {
                   text: "No",
                   value: "no",
                   checked: payload['blue-badge-check'] === 'no'
               }
           ],
           errorMessage: { text: 'Tell us if you hold a blue badge' } if error
       })
     }}
{% endblock %}
