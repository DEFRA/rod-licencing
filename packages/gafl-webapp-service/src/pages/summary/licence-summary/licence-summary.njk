{% extends "layout.njk" %}

{% from "summary-list/macro.njk" import govukSummaryList %}
{% from "fieldset/macro.njk" import govukFieldset %}
{% from "warning-text/macro.njk" import govukWarningText %}
{% from "button/macro.njk" import govukButton %}
{% from "back-link/macro.njk" import govukBackLink %}

{% if data.isRenewal %}
    {% set title = 'Check your licence renewal details' %}
{% else %}
    {% set title = 'Check your new licence details' %}
{% endif %}

{% block pageTitle %}{{ title }} - GOV.UK{% endblock %}

{% macro addressLine(line) %}
    {% if line %}{{ line }}</br>{% endif %}
{% endmacro %}

{% set types = [] %}

{% if data.hasJunior %}
    {{ types.push('Junior') }}
{% elseif data.hasSenior %}
    {{ types.push('Senior') }}
{% else %}
    {{ types.push('Adult') }}
{% endif %}

{% if data.disabled %}
    {{ types.push('Disabled') }}
{% endif %}

{% set licenseDetailsSummaryRows = [
    {
      key: {
        text: "Type"
      },
      value: {
        text: types | join(', ')
      },
      classes: 'no-border',
      actions: {items: [{}]}
    },
    {
      value: {
        text: data.permission.licenceType
      },
      classes: 'no-border' if data.permission.licenceType === data.licenceTypes['trout-and-coarse'] else '',
      actions: {
        items: [
          {
            href: data.uri.licenceType,
            text: "Change",
            visuallyHiddenText: "licence type",
            attributes: { id: 'change-licence-type' }
          }
        ]
      }
    }
  ]
%}

{% if data.permission.licenceType === data.licenceTypes['trout-and-coarse'] %}
    {{ licenseDetailsSummaryRows.push({
      value: {
        text: 'Up to 2 rods' if data.permission.numberOfRods === '2' else 'Up to 3 rods'
      },
      actions: {
        items: [
          {
            href: data.uri.numberOfRods,
            text: "Change",
            visuallyHiddenText: "number of rods",
            attributes: { id: 'change-number-of-rods' }
          }
        ] if data.permission.licenceLength === '12M'
      }
    }) }}
{% endif %}

{{ licenseDetailsSummaryRows.push({
  key: {
    text: "Licence length"
  },
  value: {
    text: '12 months' if data.permission.licenceLength === '12M' else ('8 days' if data.permission.licenceLength === '8D' else '1 day')
  },
  actions: {
    items: [
      {
        href: data.uri.licenceLength,
        text: "Change",
        visuallyHiddenText: "licence length",
        attributes: { id: 'change-licence-length' }
      }
    ] if not data.hasJunior and not data.isRenewal
  }
}) }}

{% if not data.isRenewal %}
    {{ licenseDetailsSummaryRows.push({
        key: {
        text: "Date of birth"
        },
        value: {
        text: data.birthDateStr
        },
        actions: {
        items: [
          {
            href: data.uri.dateOfBirth,
            text: "Change",
            visuallyHiddenText: "date of birth",
            attributes: { id: 'change-birth-date' }
          }
        ]
        }
    }) }}
{% endif %}

{{ licenseDetailsSummaryRows.push({
      key: {
        text: "Valid from"
      },
      value: {
        html: '30 minutes after payment' if data.permission.licenceToStart === 'after-payment' else data.startTimeString +
        ('</br><span class="govuk-caption-m">Immediately after the current licence expires</span>' if data.isContinuing and data.isRenewal else '')
      },
      actions: {
        items: [
          {
            href:  data.uri.licenceStartDate if data.isRenewal else data.uri.licenceToStart,
            text: "Change",
            visuallyHiddenText: "valid from",
            attributes: { id: 'change-licence-to-start' }
          }
        ]
      }
}) }}

{% if data.permission.licenceLength === '12M' %}
    {% if data.disabled %}
        {{ licenseDetailsSummaryRows.push({
          key: {
            text: "Disability support"
          },
          value: {
            html: data.disabled.proof.type + ":&nbsp;" + data.disabled.proof.referenceNumber
          },
          actions: {
            items: [
              {
                href: data.uri.benefitCheck,
                text: "Change",
                visuallyHiddenText: "benefit check",
                attributes: { id: 'change-benefit-check' }
              }
            ]
        }
        }) }}
    {% else %}
        {{ licenseDetailsSummaryRows.push({
          key: {
            text: "Disability support"
          },
          value: {
            html: '<span class="govuk-caption-m">None</span>'
          },
          actions: {
            items: [
              {
                href: data.uri.benefitCheck,
                text: "Change",
                visuallyHiddenText: "benefit check",
                attributes: { id: 'change-benefit-check' }
              }
            ]
        }
        }) }}
    {% endif %}
{% endif %}

{{ licenseDetailsSummaryRows.push({
  key: {
    text: "Cost"
  },
  value: {
    text: "Â£" + data.cost if data.cost else "free"
  }
}) }}

{% set licenseDetailsSummary %}
    {% call govukFieldset({
      legend: {
        text: title,
        classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-3",
        isPageHeading: true
      }
    }) %}
        <p class="govuk-body-l">Do you want to make any changes?</p>
        {{ govukSummaryList({ rows: licenseDetailsSummaryRows }) }}
    {% endcall %}
{% endset -%}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        {% if backRef %}
            {{ govukBackLink({
              text: "Back",
              href: backRef,
              classes: "govuk-!-margin-bottom-7"
            }) }}
        {% endif %}
        <form method="post">
            {{ licenseDetailsSummary | trim | safe }}

            {{ govukButton({
                attributes: { id: 'continue' },
                preventDoubleClick: true,
                name: "continue",
                text: "Continue",
                classes: "govuk-!-margin-top-5"
            }) }}

            {{ csrf() }}
        </form>
    </div>
</div>
{% endblock %}





