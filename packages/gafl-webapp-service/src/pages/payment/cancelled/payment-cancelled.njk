{% extends "layout.njk" %}

{% from "fieldset/macro.njk" import govukFieldset %}
{% from "button/macro.njk" import govukButton %}

{% set title = 'Your payment has been cancelled' %}
{% block pageTitle %}{{ title }} - GOV.UK{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-third">
        <form method="post">
            {% call govukFieldset({
              legend: {
                text: title,
                classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-3",
                isPageHeading: true
              }
            }) %}

                <p class="govuk-body-m">No money has been taken from your account.</p>

                {{ govukButton({
                    attributes: { id: 'continue' },
                    preventDoubleClick: true,
                    name: "continue",
                    text: "Try payment again",
                    classes: "govuk-!-margin-top-5"
                }) }}
            {% endcall %}

        </form>
        <a class="govuk-link" href="{{ uri.new }}">Buy another licence</a>
    </div>
</div>
{% endblock %}
