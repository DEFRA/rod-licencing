{% extends "layout.njk" %}

{% from "input/macro.njk" import govukInput %}
{% from "button/macro.njk" import govukButton %}
{% from "error-summary.njk" import errorSummary %}

{% block pageTitle %}Name - GOV.UK{% endblock %}

{%
    set errorMap = {
        name: {
            'string.empty': { ref: '#name', text: 'You did not add a name' },
            'string.min': { ref: '#name', text: 'The name was to short' }
        },
        email: {
            'string.empty': { ref: '#email', text: 'You did not add an email' },
            'string.email': { ref: '#email', text: 'Not a good email' }
        }
    }
%}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        {{ errorSummary(error, errorMap) }}

        <form method="post">

            {{ govukInput({
              label: {
                text: "Name"
              },
              id: "name",
              name: "name",
              value: payload.name,
              errorMessage: error.name
            }) }}

            {{ govukInput({
              label: {
                text: "Email"
              },
              id: "email",
              name: "email",
              value: payload.email,
              errorMessage: error.email
            }) }}

            {{ govukButton({
                text: "Continue"
            }) }}

        </form>
    </div>
</div>
{% endblock %}



