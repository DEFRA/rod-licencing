{% extends "layout.njk" %}

{% from "input/macro.njk" import govukInput %}
{% from "button/macro.njk" import govukButton %}

{% block pageTitle %}Name - GOV.UK{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post">

            {{ govukInput({
              label: {
                text: "Name"
              },
              id: "name",
              name: "name",
              value: payload.name,
              errorMessage: error.name
            }) }}

            {{ govukInput({
              label: {
                text: "Email"
              },
              id: "email",
              name: "email",
              value: payload.email,
              errorMessage: error.email
            }) }}

            {{ govukButton({
                text: "Continue"
            }) }}

        </form>
    </div>
</div>
{% endblock %}



