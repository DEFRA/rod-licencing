{% extends "standard-form.njk" %}

{% from "date-input/macro.njk" import govukDateInput %}
{% set title = 'When would you like your licence to start?' %}

{%
    set errorMap = {
        'licence-start-date': {
            'date.format': { ref: '#licence-start-date-day', text: 'Not a valid date. Enter the date you want the licence to start on and include a day, month and year' },
            'date.max': { ref: '#licence-start-date-day', text: 'Enter a date up to and including ' + data.maxStartDate },
            'date.min': { ref: '#licence-start-date-day', text: 'The licence must not start in the past' }
        }
    }
%}

{% set dateInputItems = [
    {
      name: "day",
      classes: "govuk-input--width-2",
      value: payload['licence-start-date-day']
    },
    {
      name: "month",
      classes: "govuk-input--width-2",
      value: payload['licence-start-date-month']
    },
    {
      name: "year",
      classes: "govuk-input--width-4",
      value: payload['licence-start-date-year']
    }
  ]
%}

{% block pageContent %}
    {{ govukDateInput({
      id: "licence-start-date",
      namePrefix: "licence-start-date",
      items: dateInputItems,
      errorMessage: { text: 'Enter a valid date that is within 60 days' } if error,
      hint: {
        text: "Enter a date up to and including " + data.maxStartDate
      }
    }) }}

{% endblock %}