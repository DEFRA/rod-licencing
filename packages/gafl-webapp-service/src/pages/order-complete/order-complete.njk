{% extends "layout.njk" %}

{% from "fieldset/macro.njk" import govukFieldset %}
{% from "button/macro.njk" import govukButton %}
{% from "panel/macro.njk" import govukPanel %}

{% set title = 'Application complete' if data.permission.permit.cost === 0 else 'Payment complete' %}
{% block pageTitle %}{{ title }} - GOV.UK{% endblock %}

{% block content %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        {{ govukPanel({
          titleText: title,
          html: 'Your licence number is<br><strong><span id="permission-number">' + data.permission.referenceNumber + '</span></strong><br /><br />Valid from <br />' + data.startTimeStringTitle
        }) }}

        {% if data.isPostalFulfilment %}
            <p class="govuk-body">
                You can fish from the time and date your licence starts. You do not need to wait to get your licence card.
            </p>
        {% else %}
            <p class="govuk-body">
                You can fish from the time and date your licence starts.
            </p>
            <p class="govuk-body">
                We’ve sent your licence by email or text message.
            </p>
        {% endif %}

        <div class="govuk-!-margin-bottom-9 no-print">
            <h2 class="govuk-heading-l">Before you go fishing</h2>

            <p class="govuk-body">
                It’s important you know your licence number. You can take a screenshot or print out your licence information.
            </p>

            <form action="licence-information">
                {{ govukButton({
                    text: "View your licence information",
                    classes: "govuk-button--secondary"
                }) }}
            </form>

            {% if data.isPostalFulfilment %}
                <p class="govuk-body">
                    If you gave us your email address, you’ll get a message that includes your licence information.
                </p>
                <div class="govuk-inset-text">
                    Make a record of your licence number.
                </div>
            {% endif %}

            <p class="govuk-body">
                If an enforcement officer asks to see your licence, you'll need to give them these details.
            </p>

            <p class="govuk-body">
                You must follow the <a class="govuk-link" href="https://www.gov.uk/guidance/national-rod-fishing-byelaws-for-england-freshwater-fishing-with-a-rod-and-line" target="_blank">rod fishing byelaws (opens in a new tab)</a>.
            </p>

        </div>
        {% if data.permission.licenceType === data.licenceTypes['salmon-and-sea-trout'] %}
            <div class="govuk-!-margin-bottom-9">
                <h2 class="govuk-heading-l">Report your yearly catch return</h2>
                <p class="govuk-body no-print">
                    You must by law <span><a class="govuk-link" href="https://www.gov.uk/catch-return">report a catch return</a> </span>report a catch return of your yearly salmon and sea trout fishing activity in England and Wales, even if you do not catch anything or do not fish.
                </p>
                <p class="govuk-body print-area">
                    You must by law report a catch return of your yearly salmon and sea trout fishing activity in England and Wales, even if you do not catch anything or do not fish.
                </p>
            </div>
        {% endif %}
        <p class="govuk-body no-print"><a class="govuk-link" href="{{ data.uri.feedback }}">Tell us what you think of this service</a> (takes 30 seconds).</p>

        {{ govukButton({
            href: data.uri.new,
            attributes: { id: 'continue' },
            text: "Buy another licence",
            classes: "govuk-!-margin-top-4 no-print govuk-button--secondary"
        }) }}

    </div>
</div>
{% endblock %}
